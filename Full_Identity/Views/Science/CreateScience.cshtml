@model Full_Identity.DTOs.CreateScienceDTO

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}
<h1>Add Science</h1>
<form class="row g-3" style="width: 400px" asp-controller="Science" asp-action="CreateScience" asp-route-schoolId="@ViewBag.Id" method="post">
    <div>
        <input  name="Name" class="form-control" asp-for="Name" type="text" placeholder="Name"/>
        <span asp-validation-for="Name"></span>
    </div>
    <div>
        <input  name="Description" class="form-control" asp-for="Description" type="text" placeholder="Description"/>
        <span asp-validation-for="Description"></span>
    </div>
    <button class="form-control"  type="submit" >Add</button>
</form>
