@model Full_Identity.DTOs.SignUpDTO


<h1>Sign Up</h1>

<form class="row g-3" style="width: 400px" asp-controller="User" asp-action="SignUp" enctype="multipart/form-data" method="post">
    <div>
        <input name="Photo" class="form-control" asp-for="Photo" type="file" />
        <span asp-validation-for="Photo"></span>
    </div>
    <div>
        <input name="FirstName" class="form-control" asp-for="FirstName" type="text" placeholder="FirstName"/>
        <span asp-validation-for="FirstName"></span>
    </div>   
    <div>
        <input name="LastName" class="form-control" asp-for="LastName" type="text" placeholder="LastName"/>
        <span asp-validation-for="LastName"></span>
    </div>
    <div>
        <input  name="UserName" class="form-control" asp-for="UserName" type="text" placeholder="Username"/>
        <span asp-validation-for="UserName"></span>
    </div>
    <div>
        <input  name="Password" class="form-control" asp-for="Password" type="password" placeholder="Password"/>
        <span asp-validation-for="Password"></span>
    </div>
    <button class="form-control"  type="submit" >Sign Up</button>
    <a class="link-info" asp-controller="User" asp-action="SignIn">Sign In</a>
</form>